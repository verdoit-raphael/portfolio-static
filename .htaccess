# .htaccess generated by SEOJuice

# Custom specific rules


# Enable browser caching
<IfModule mod_expires.c>
    # Activate mod_expires module
    ExpiresActive On

    # Set expiration times for different file types
    # Images (1 year)
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"

    # CSS and JavaScript (1 month)
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/x-javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"

    # PDFs (1 month)
    ExpiresByType application/pdf "access plus 1 month"

    # Flash files (1 month)
    ExpiresByType application/x-shockwave-flash "access plus 1 month"

    # Favicon (1 year)
    ExpiresByType image/x-icon "access plus 1 year"

    # Default expiration (2 days) for all other file types
    ExpiresDefault "access plus 2 days"
</IfModule>


# Block hotlinking of images
<IfModule mod_rewrite.c>
    # Enable the rewrite engine
    RewriteEngine on

    # Allow empty referrers (direct access)
    RewriteCond %{HTTP_REFERER} !^$

    # Allow access from your own domain (replace 'yourdomain.com' with your actual domain)
    RewriteCond %{HTTP_REFERER} !^http(s)?://(www\.)?yourdomain.com [NC]

    # Block access to image files from other domains
    # [NC] means case-insensitive
    # [F] means return a 403 Forbidden status
    # [L] means this is the last rule to process
    RewriteRule \.(jpg|jpeg|png|gif)$ - [NC,F,L]
</IfModule>


# Enable Keep-Alive
<IfModule mod_headers.c>
    Header set Connection keep-alive
</IfModule>


# Disable directory browsing
Options -Indexes


# Block bad bots
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTP_USER_AGENT} ^.*(AhrefsBot|SemrushBot|MJ12bot|DotBot|BLEXBot|PetalBot).*$ [NC]
    RewriteRule ^.* - [F,L]
</IfModule>

